<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.tonyshkurenko.materialstuffsetup">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".NavigationDrawerActivity"
        android:label="@string/title_activity_navigation_drawer"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.materialstuffsetup.MainActivity"/>
    </activity>
    <activity
        android:name=".TextInputLayoutActivity"
        android:label="@string/title_activity_text_input_layout"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.materialstuffsetup.MainActivity"/>
    </activity>
    <activity
        android:name=".CircularRevealActivity"
        android:label="@string/title_activity_circular_reveal"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.materialstuffsetup.MainActivity"/>
    </activity>
  </application>

</manifest>